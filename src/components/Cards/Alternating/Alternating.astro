---
interface Card {
    [key: string]: {
        [key: string]: any;
    };
}
import s from "./style.module.css";
import CustomImage from "@components/CustomImage.astro";
const { cards } = Astro.props;
---

<div class={s["alternating-card-grid"]}>
    {
        cards.map((card: Card) => (
            <div class={s["alternating-card"]} data-has-background>
                <div class={s["alternating-card__image-wrapper"]}>
                    {card.expand.image && (
                        <CustomImage
                            eager={false}
                            image={card.expand.image}
                            size="medium"
                            classlist={s["alternating-card__image"]}
                        />
                    )}
                </div>
                <article>
                    <h3>{card.title}</h3>
                    <slot set:html={card.content} />
                </article>
            </div>
        ))
    }
</div>

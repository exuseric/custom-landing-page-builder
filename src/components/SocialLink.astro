---
interface Props {
    type: string;
    text?: string;
    href: string;
}
import { Icon } from "astro-icon/components";
const props = Astro.props;

const icons: Record<string, `mdi:${string}` | `ri:${string}`> = {
    'x (formerly twitter)': "ri:twitter-x-line",
    linkedin: "ri:linkedin-box-fill",
    facebook: "ri:facebook-box-fill",
    instagram: "ri:instagram-fill",
    youtube: "ri:youtube-fill",
};  
---

<a href={props.href} data-icon-link>
    <Icon name={icons[props.type]} aria-hidden="true" focusable="false" />
    <span>{props.text}</span>
</a>


---
import type { HeroBlock } from "@utils/payload/types";
interface Props extends HeroBlock {}

import Container from "@components/Container.astro";
import "./style.css";
import CustomImage from "@components/CustomImage.astro";
const props = Astro.props;
---

<header class="split-hero">
    <Container>
        <div class="split-hero__wrapper">
            <article class="split-hero__content">
                <h1 class="split-hero__title">{props.heading}</h1>
                <p>{props.excerpt}</p>
                <a
                    href="#contact"
                    class="btn  btn--primary"
                    style="margin-top: 0.825rem;">Let's Talk</a
                >
            </article>
            <CustomImage
                eager={true}
                image={props.cover}
                size="large"
                classlist="split-hero__image"
            />
        </div>
    </Container>
</header>

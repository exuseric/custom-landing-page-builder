---
import type { HeroBlock } from "@utils/payload/types";
import Container from "@components/Container.astro";
import "./hero.css";
import CustomImage from "@components/CustomImage.astro";
interface Props extends HeroBlock {}
const { heading, excerpt, cover } = Astro.props;
---

<header class='alternate_horizontal_hero content_section'>
    <Container>
        <div class="alternate_horizontal_hero__wrapper">
            <article class="alternate_horizontal_hero__content">
                <h1>{heading}</h1>
                <p>{excerpt}</p>
            </article>

            <div class="alternate_horizontal_hero__image_wrapper">
                <CustomImage
                    image={cover}
                    size="large"
                    classlist="alternate_horizontal_hero__image"
                    eager={true}
                />
            </div>
        </div>
    </Container>
</header>

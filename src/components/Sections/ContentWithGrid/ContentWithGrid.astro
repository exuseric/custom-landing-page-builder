---
import s from "./style.module.css";
import type { ContentWithGridBlock } from "@utils/payload/types";
interface Props extends ContentWithGridBlock {}
import Container from "@components/Container.astro";
import Basic from "@components/Cards/Basic/Basic.astro"
import CustomImage from "@components/CustomImage.astro";
import { extractLexicalText } from "@utils/payload/helpers";
const props = Astro.props;
---

<div
    class:list={[s["content-with-grid"], "page-section"]}
    data-highlight={props.highlight}
    id={props["anchor id"]?.split(" ").join("-")}
    data-offscreen
>
    <Container>
        <header class:list={[s["content-with-grid__header"], "page-section__header"]}>
            <h2>{props.title}</h2>
            <slot set:html={extractLexicalText(props.body)} />
        </header>

        <div class={s["content-with-grid__grid-wrapper"]}>
            {props['card type'] === 'basic' && <Basic cards={props['card grid']}/>}
        </div>
    </Container>
</div>

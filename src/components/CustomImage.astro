---
// import {Image} from '@unpic/astro'
import { Image } from "astro:assets";
import {DATABASE_URL} from "astro:env/server";
import type { Media } from "@utils/payload/types";
interface Props {
  image: Media;
  classlist: string;
  eager: boolean;
  size: string;
  id?: string;
}

const { image, classlist, size, eager, id } = Astro.props;
---
<Image
    id={id}
    src={`${DATABASE_URL}${image.url}`}
    alt={image.alt as string}
    title={image.alt}
    width={image.width}
    height={image.height}
    class={classlist}
    loading={eager ? "eager" : "lazy"}
    decoding={eager ? "sync" : "async"}
/>
